<?xml version="1.0" encoding="UTF-8"?>
<node>
    <primaryNodeType>sling:OsgiConfig</primaryNodeType>
    <property>
        <name>handler.schemes</name>
        <type>String</type>
        <value>jcrinstall</value>
    </property>
    <property>
        <name>sling.jcrinstall.enable.writeback</name>
        <type>Boolean</type>
        <value>true</value>
    </property>
    <property>
        <name>sling.jcrinstall.folder.max.depth</name>
        <type>Long</type>
        <value>5</value>
    </property>
    <property>
        <name>sling.jcrinstall.folder.name.regexp</name>
        <type>String</type>
        <value>.*/(install|config)$</value>
    </property>
    <property>
        <name>sling.jcrinstall.new.config.path</name>
        <type>String</type>
        <value>system/config</value>
    </property>
    <property>
        <name>sling.jcrinstall.search.path</name>
        <type>String</type>
        <values>
            <value>/libs:100</value>
            <value>/apps:200</value>
        </values>
    </property>
    <property>
        <name>sling.jcrinstall.signal.path</name>
        <type>String</type>
        <values>
            <value>/system/sling/installer/jcr/pauseInstallation</value>
        </values>
    </property>
</node>
